    <div class="modal" id="modalNickName" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content" style="width: 400px;">
                <div class="modal-header">
                    <div class="row">
                        <div class="col-md-2">
                            <img src="~/Content/img/FlightJobsLogo0006.png" style="width:150px;" />
                        </div>
                        <div class="col-md-8">
                            <h4 class="modal-title" id="myModalLabel">Please set your Nick Name</h4>
                        </div>

                    </div>
                </div>
                <div class="modal-body">
                    <div id="nick-name-content"></div>
                </div>
                
            </div>
        </div>
    </div>

    <script>
        $("document").ready(function () {
            $(function () {
                $('.sidenav a[href="/' + location.pathname.split("/")[location.pathname.split("/").length - 1] + '"]').parent().addClass('active');
                $('.sidenav a[href="/Home/' + location.pathname.split("/")[location.pathname.split("/").length - 1] + '"]').parent().addClass('active');
            });
        });

    </script>
   
</body>
</html>
