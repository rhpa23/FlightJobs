<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FlightJobs</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")

    <!-- the main fileinput plugin file -->
    @Scripts.Render("~/bundles/fileinput")

    <script src="/Scripts/bootstrap.js"></script>
    <script src="/Scripts/respond.js"></script>
    <script src="/Scripts/util.js"></script>
    <script src="/Scripts/bootstrap-confirmation.js"></script>
    <script src="/Scripts/bootstrap-tooltip.js"></script>
    @RenderSection("scripts", required: false)

    <link rel="apple-touch-icon" sizes="57x57" href="/Content/icon/apple-icon-57x57.png">
    <link rel="apple-touch-icon" sizes="60x60" href="/Content/icon/apple-icon-60x60.png">
    <link rel="apple-touch-icon" sizes="72x72" href="/Content/icon/apple-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="76x76" href="/Content/icon/apple-icon-76x76.png">
    <link rel="apple-touch-icon" sizes="114x114" href="/Content/icon/apple-icon-114x114.png">
    <link rel="apple-touch-icon" sizes="120x120" href="/Content/icon/apple-icon-120x120.png">
    <link rel="apple-touch-icon" sizes="144x144" href="/Content/icon/apple-icon-144x144.png">
    <link rel="apple-touch-icon" sizes="152x152" href="/Content/icon/apple-icon-152x152.png">
    <link rel="apple-touch-icon" sizes="180x180" href="/Content/icon/apple-icon-180x180.png">
    <link rel="icon" type="image/png" sizes="192x192" href="/Content/icon/android-icon-192x192.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/Content/icon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="96x96" href="/Content/icon/favicon-96x96.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/Content/icon/favicon-16x16.png">
    <link rel="manifest" href="/Content/icon/manifest.json">
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="msapplication-TileImage" content="/Content/icon/ms-icon-144x144.png">
    <meta name="theme-color" content="#ffffff">

    <!-- Google AdSense -->
    <script data-ad-client="ca-pub-7093180320869036" async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>

    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-121679574-1"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'UA-121679574-1');
    </script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index", "Home")">
                    <img src="~/Content/img/FlightJobsLogo0006.png" style="height:45px; padding-top:5px;" />
                </a>
                @Html.Partial("_LoginPartial")
            </div>
            
        </div>
    </div>
    <div id="banner" style="width:100%; position: relative; z-index:90;">
        
        <img src="~/Content/img/banner0001.jpg" style="width:100%" />
    </div>
    @if (User.Identity.Name == "Guest")
    {
    <div class="card" style="padding:5px; text-align:center; margin:0px; ">
        <div>Using a guest account. If you already have an account click 
            @Html.ActionLink("Login", "Login", "Account", new object { }, new { @class = "btn btn-info btn-xs" })
             to sign in. Or click 
            @Html.ActionLink("Register", "Register", "Account", new object { }, new { @class = "btn btn-default btn-xs" })
            to register yourself.
        </div>
    </div>
    }

    <div class="container body-content">
        @if (TempData["MessageLayout"] != null)
        {
            <div class="alert alert-info">
                <strong>Info!</strong> @TempData["MessageLayout"]
            </div>
        }
        
        <div class="row">
            <div class="col-sm-2" style="width:14%;">
                <div id="sidenav" class="sidenav">
                    <ul>
                        <li><i class="glyphicon glyphicon-home black-icon"></i>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li><i class="glyphicon glyphicon-user black-icon"></i>@Html.ActionLink("Logbook", "Index", "Profile")</li>
                        <li><i class="glyphicon glyphicon-list-alt black-icon"></i>@Html.ActionLink("Airlines", "Index", "Airlines")</li>
                        <li><i class="glyphicon glyphicon-plus black-icon"></i>@Html.ActionLink("Add Jobs", "Index", "SearchJobs")</li>
                        <li><i class="glyphicon glyphicon-screenshot black-icon"></i>@Html.ActionLink("Challenges", "Index", "Challenge", null, new { @style= "width: auto;" })
                        <span class="badge badge-pill badge-warning">@if (ViewBag.ChallengeCount != null) { @ViewBag.ChallengeCount; }</span>
                        </li>
                        <li class="divider"></li>
                        <li><i class="glyphicon glyphicon-signal black-icon"></i>@Html.ActionLink("Analysis", "Analysis", "Home")</li>
                        <li><i class="glyphicon glyphicon-download black-icon"></i>@Html.ActionLink("Download", "Install", "Home")</li>
                        <li class="divider"></li>
                        <li><i class="glyphicon glyphicon-flag black-icon"></i><a target="_blank" href="https://www.paypal.com/cgi-bin/webscr?cmd=_donations&business=B2GHF8WFN95JW&lc=US&item_name=FlightJobs&currency_code=USD&bn=PP%2dDonationsBF%3abtn_donateCC_LG%2egif%3aNonHosted">Donation</a></li>
                        <li><i class="glyphicon glyphicon-info-sign black-icon"></i>@Html.ActionLink("About", "About", "Home")</li>
                        <li><i class="glyphicon glyphicon-question-sign black-icon"></i>@Html.ActionLink("Faq", "Faq", "Home")</li>
                    </ul>
                </div>
            </div>
            <div class="col-sm-7"  style="width:61%;">
                @RenderBody()
            </div>
            <div class="col-sm-3 ads-content">
                <!-- FSadwork -->
                <center>
                    <script type="text/javascript">
                        zone = "27";
                        pl = "162";
                        url = "https://www.fsadwork.com";</script>
                    <script type="text/javascript" src="https://www.fsadwork.com/show.js"></script>
                    <br />
                    <br />
                    <a href="mailto:rhpa23@gmail.com?Subject=FlightJobsAdvertise">
                        <img src="~/Content/img/AdvertiseHere.jpg" border="0">
                    </a>
                    <hr />
                    <div>
                        <img src="~/Content/img/FlightJobsLogo0002.png" style="width:70px;" />
                    </div>
                    <div class="text-center">
                        <form action="https://www.paypal.com/cgi-bin/webscr" method="post" target="_blank">
                            <input type="hidden" name="cmd" value="_s-xclick" />
                            <input type="hidden" name="hosted_button_id" value="44VG35XYRJUCW" />
                            <input type="image" src="https://www.paypalobjects.com/en_US/i/btn/btn_donateCC_LG.gif" border="0" name="submit" title="PayPal - The safer, easier way to pay online!" alt="Donate with PayPal button" />
                            <img alt="" border="0" src="https://www.paypal.com/en_BR/i/scr/pixel.gif" width="1" height="1" />
                        </form>
                        <br />
                        <img src="~/Content/img/QRCode.png" style="width:100px;" />
                    </div>
                </center>
            </div>
        </div>
    </div>
    <div align="center">
        <div class="separator"></div>
    </div>
    <footer>
        <div class="text-center">
            <p>
                This application for X-Plane 11 simulate pilot and airliners jobs.
            </p>
            <p>
                For use you will need to download and install the <b>FlightJobs Connector Script</b>. @Html.ActionLink("Click here to download the last version.", "Install", "Home")<br><br>
            </p>

            <p>FlightJobs is free. If you like it, please consider to make a donation. Donations will be spent paying the servers costs.</p>
            <img src="~/Content/img/FlightJobsLogo0002.png" style="width:70px;" />

            <form action="https://www.paypal.com/cgi-bin/webscr" method="post" target="_blank">
                <input type="hidden" name="cmd" value="_s-xclick" />
                <input type="hidden" name="hosted_button_id" value="44VG35XYRJUCW" />
                <input type="image" src="https://www.paypalobjects.com/en_US/i/btn/btn_donateCC_LG.gif" border="0" name="submit" title="PayPal - The safer, easier way to pay online!" alt="Donate with PayPal button" />
                <img alt="" border="0" src="https://www.paypal.com/en_BR/i/scr/pixel.gif" width="1" height="1" />
            </form>

            <p>Developed by rhpa23 </p><br />
            <img src="~/Content/img/QRCode.png" style="width:130px;" />
            <br /><hr style="margin-left:220px;" />
            <p><strong> Thank you for visiting FlightJobs &copy; @DateTime.Now.Year </strong></p><br />
            <a href="https://discordapp.com/invite/xmpAWz7" target="_blank" data-toggle="tooltip" title="FlightJobs at Discord">
                <img src="~/Content/img/discordapp.png" style="width:40px;" />
            </a>
            <a href="https://fb.me/rhpa23" target="_blank" data-toggle="tooltip" title="FlightJobs at Facebook">
                <img src="~/Content/img/fb.png" style="width:40px;" />
            </a>
            <a href="mailto:rhpa23@gmail.com?Subject=FlightJobs" target="_blank" data-toggle="tooltip" title="Support e-mail">
                <img src="~/Content/img/email-icon.png" style="width:35px;" />
            </a>

            <p> Disable anti-popup in your browser for a better experience  </p><br />
            <br /><br />
        </div>
    </footer>
    <style>
        .fixed-footer {
            position: fixed;
            height: 30px;
            bottom: 0;
            width: 100%;
            background-color: #222;
            color:aliceblue;
            padding:2px;
        }
    </style>
