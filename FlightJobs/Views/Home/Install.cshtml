<script>
    $("#img-xplane").click(function () {
        $("#msfs-install").hide();
        $("#xplane-install").show();
        $("#img-xplane").removeClass('install-unselected');
        $("#img-msfs").removeClass('install-selected');

        $("#img-xplane").addClass('install-selected');
        $("#img-msfs").addClass('install-unselected');
        
    });

    $("#img-msfs").click(function () {
        $("#msfs-install").show();
        $("#xplane-install").hide();
        $("#img-xplane").removeClass('install-selected');
        $("#img-msfs").removeClass('install-unselected');

        $("#img-xplane").addClass('install-unselected');
        $("#img-msfs").addClass('install-selected');
    });
</script>