
@model List<FlightJobs.Models.JobAirlineDbModel>

<style>
    .credit {
        color:green;
    }
    .debit {
        color:red;
    }
</style>
<p>Fuel price per Kg: $ 5.70</p> 
<div class="panel panel-default text-center" style="margin-bottom:5px">
    @if (Model != null)
    {
    <table class="table table-striped table-bordered table-hover" style="font-size: 10px; padding:0px">
        <tr>
            <th>Departure</th>
            <th>Arrival</th>
            <th>Model</th>
            <th>Distance</th>
            <th>Flight time</th>
            <th>Pax</th>
            <th>Total payload</th>
            <th>Fuel loaded</th>
            <th>Fuel burned</th>
            <th class="debit">Fuel cost</th>
            <th>Fuel cost per NM</th>
            <th class="debit">Ground crew fixed cost</th>
            <th class="debit">Flight crew cost</th>
            <th class="debit">Flight attendant cost</th>
            <th class="debit">Total crew cost labor</th>
            <th class="debit">Total flight cost</th>
            <th>Revenue earned</th>
            <th class="credit">Flight income</th>
        </tr>

        @foreach (var item in Model.ToList())
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Job.DepartureICAO)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Job.ArrivalICAO)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Job.ModelDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Job.Dist) nm
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Job.FlightTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Job.Pax)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Job.Payload) Kg
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Job.StartFuelWeight) Kg
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Job.UsedFuelWeight)
                </td>
                <td class="debit">
                    @string.Format("{0:C}", item.FuelCost)
                </td>
                <td>
                    @string.Format("{0:C}", item.FuelCostPerNM)
                </td>
                <td class="debit">
                    @string.Format("{0:C}", item.GroundCrewCost)
                </td>
                <td class="debit">
                    @string.Format("{0:C}", item.FlightCrewCost)
                </td>
                <td class="debit">
                    @string.Format("{0:C}", item.FlightAttendantCost)
                </td>
                <td class="debit">
                    @string.Format("{0:C}", item.TotalCrewCostLabor)
                </td>
                <td class="debit">
                    @string.Format("{0:C}", item.TotalFlightCost)
                </td>
                <td>
                    @string.Format("{0:C}", item.RevenueEarned)
                </td>
                <td class="credit">
                    @string.Format("{0:C}", item.FlightIncome)
                </td>
            </tr>
        }

    </table>
    }
    else
    {
        <div>No jobs registered for this airline.</div>
    }
</div>
