@model IEnumerable<FlightJobs.Models.AirlineDbModel>


<div style="width:100%; ">
    <img src="~/Content/img/contract2.jpg" style="width:99.8%" />
</div>
@if (ViewBag.Message != null)
{
    <div class="alert alert-info">
        <strong>Info!</strong> @ViewBag.Message
    </div>
}
<div class="jumbotron">
    <div class="panel panel-default text-center">
        <p><b>Available airlines to sign contract</b></p>
        <table class="table table-striped table-bordered table-hover" style="font-size: 15px;">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Country)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Salary)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Score)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Logo)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Country)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Salary)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Score)
                    </td>
                    <td>
                        <img src="@item.Logo" style="width:50px; height:50px; " />
                    </td>
                    <td>
                        @Html.ActionLink("Sign contract", "Sign", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>