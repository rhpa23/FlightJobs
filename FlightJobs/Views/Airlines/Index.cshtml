@model IEnumerable<FlightJobs.Models.AirlineDbModel>


<div style="width:100%; ">
    <img src="~/Content/img/contract2.jpg" style="width:99.8%" />
</div>
@if (ViewBag.Message != null)
{
    <div class="alert alert-info">
        <strong>Info!</strong> @ViewBag.Message
    </div>
}
<div class="jumbotron">
    <div class="panel panel-default text-center">
        <button id="addAirline" class="btn btn-info  pull-right btn-md">Buy your own airline</button>
        @*@Html.ActionLink("Buy your own airline", "Add", "Airlines", new { @id= "addAirline", @class = "btn btn-info  pull-right btn-md" })*@
        <p><b>Available airlines to sign contract</b></p>
        <table class="table table-striped table-bordered table-hover" style="font-size: 15px;">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Country)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Salary)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Score)
                </th>
                <th></th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Country)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Salary)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Score)
                    </td>
                    <td>
                        <img src="@item.Logo" style="width:50px; height:50px; " />
                    </td>
                    <td>
                        @Html.ActionLink("Sign contract", "Sign", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content" style="width: 700px;">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Create your own airline</h4>
            </div>

            <div id="add-airline-content"></div>
        </div>
    </div>
</div>


<script type='text/javascript'>

    $('#addAirline').click(function () {
        $.ajax({
            url: '@Url.Action("AddView", "Airlines")',
            type: "Get",
            success: function (result) {
                if (result != null && result != '') {
                    $("#add-airline-content").html(result);
                    $('#addModal').modal('show');
                }
                else {
                    location.reload();
                }
            }
        });
        return false;
    });
</script>